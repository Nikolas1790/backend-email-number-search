{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts", "dist/server.js", "routes/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
